{
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "module": "commonjs",
    "inlineSourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "lib": [
      "es2018",
      "dom",
    ]
  },
  "include": [
    "src/**/*"
  ]
}

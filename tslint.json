{
    "defaultSeverity": "error",
    "extends": [
        "tslint:all"
    ],
    "jsRules": {},
    "rules": {
        "max-line-length": {
            "options": 80,
            "severity": "warning"
        },
        "no-unsafe-any": {
            "severity": "warning"
        },
        "semicolon": [true, "never"],
        "quotemark": [true, "single"],
        "arrow-parens": [true, "ban-single-arg-parens"],
        "trailing-comma": [true, { "multiline": "never", "singleline": "never" }],
        "object-literal-sort-keys": false,
        "interface-name": [true, "never-prefix"],
        "max-classes-per-file": false,
        "indent": [true, "spaces", 4],
        "linebreak-style": [true, "LF"],
        "cyclomatic-complexity": [true, 5],
        "arrow-return-shorthand": [true, "multiline"],
        "comment-format": [true, "check-space", "check-uppercase"],
        "interface-over-type-literal": false,
        "prefer-switch": [true, {"min-cases": 2}],
        "no-boolean-literal-compare": true,
        "file-name-casing": [true, "kebab-case"],
        "no-floating-promises": [true, "Bluebird"],
        "space-before-function-paren": [true, {"anonymous": "always", "named": "never", "asyncArrow": "always"}],
        "no-shadowed-variable": false,
        "typedef": false,
        "member-ordering": false,
        "type-literal-delimiter": false,
        "variable-name": [true, "check-format", "allow-pascal-case"],
        "no-default-export": false,
        "only-arrow-functions": false,
        "no-any": false,
        "no-magic-numbers": false
    },
    "rulesDirectory": []
}
